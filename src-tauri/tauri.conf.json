{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "propos",
  "version": "0.1.0",
  "identifier": "com.propos.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "ProPos",
        "title": "ProPos",
        "fullscreen": true,
        "resizable": true,
        "decorations": true,
        "alwaysOnTop": false,
        "minimizable": true,
        "maximizable": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
